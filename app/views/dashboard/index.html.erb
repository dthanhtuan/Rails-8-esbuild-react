<div id="notifications" class="fixed top-0 right-0 m-4 space-y-2 z-50">
  <%= turbo_stream_from "notifications" %>

  <% @notifications.each do |notification| %>
    <%= render partial: "notifications/notification", locals: { notification: notification } %>
  <% end %>
</div>

<div class="flex flex-col direction-column items-center justify-center">
  <h1>Dashboard#Index</h1>
  <div class="inline">
    <%= link_to('Posts', posts_path, class: "text-amber-500") %>
  </div>
  <div id="react-dashboard"></div>
</div>
