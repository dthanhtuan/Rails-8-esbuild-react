<div class="flex flex-col direction-column items-center justify-center">
  <h1>Page for testing Turbo Frame and Turbo Stream</h1>
  <div class="inline">
    <%= link_to('Click here to goes to Dashboard without full page load', root_path, class: "text-amber-500") %>
  </div>
  <div>
    <h1 class="text-2xl font-bold">Posts</h1>
  </div>
  <div>
    <div id="old_posts">
      <div class="space-y-4">
        <% @posts.each do |post| %>
          <div class="mt-4">
            <%= turbo_frame_tag post do %>
              <%= link_to "Click to trigger Turbo Frame loads of #{post.id}.#{post.title} post", post_path(post) %>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>

    <div class="mt-4" id="post_created">
      <h1 class="text-2xl font-bold">Newly Created Post From Turbo Stream</h1>
    </div>
  </div>

  <div id="post_form">
    <%= render 'form', post: Post.new %>
  </div>
</div>
